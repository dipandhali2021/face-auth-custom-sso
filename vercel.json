{
  "version": 2,
  "buildCommand": "apt-get update && apt-get install -y build-essential libcairo2-dev libpango1.0-dev libjpeg-dev libgif-dev librsvg2-dev pkg-config python3 && npm install",
  "builds": [
    {
      "src": "oauth-server.js",
      "use": "@vercel/node@3.0.0"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/models/(.*)",
      "dest": "/public/models/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/(.*\\.(html|css|js|ico|png|json))",
      "dest": "/public/$1"
    },
    {
      "src": "/oauth/(.*)",
      "dest": "/oauth-server.js"
    },
    {
      "src": "/face-auth/(.*)",
      "dest": "/oauth-server.js"
    },
    {
      "src": "/register(.*)",
      "dest": "/oauth-server.js" 
    },
    {
      "src": "/upload",
      "dest": "/oauth-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/oauth-server.js"
    }
  ]
}